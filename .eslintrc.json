{
    "extends": [
        "airbnb",
        "plugin:import/typescript"
    ],
    "globals": {
        "PLUGIN_VERSION": true,
        "PLUGIN_NAME": true
    },
    "env": {
        "browser": true
    },
    "ignorePatterns": [
        "dist//*"
    ],
    "parserOptions": {
        "ecmaVersion": 13
    },
    "rules": {
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "warn",
            {
                "ignoreStrings": true,
                "ignoreComments": true,
                "ignoreRegExpLiterals": true,
                "ignoreTemplateLiterals": true,
                "code": 120
            }
        ],
        "semi": [
            "warn",
            "never"
        ],
        "no-plusplus": [
            2,
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "import/prefer-default-export": "off",
        "import/no-extraneous-dependencies": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error",
                    "info"
                ]
            }
        ]
    }
}
